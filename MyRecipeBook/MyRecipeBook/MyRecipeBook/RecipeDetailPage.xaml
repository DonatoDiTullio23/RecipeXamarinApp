<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyRecipeBook.RecipeDetailPage"
             Title="Recipe Detail"
             BackgroundColor="#f5f5f5">
    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            <Label x:Name="recipeName" 
                   FontAttributes="Bold" 
                   FontSize="24" 
                   TextColor="#333" 
                   HorizontalOptions="Center" 
                   Margin="0,10"/>

            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   HasShadow="True" 
                   Padding="0">
                <Image x:Name="recipeImage" 
                       Aspect="AspectFill" 
                       HeightRequest="250"/>
            </Frame>

            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   HasShadow="True" 
                   Padding="15" 
                   Margin="0,10">
                <Label x:Name="recipeIngredients" 
                       FontSize="16" 
                       TextColor="#666"/>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
